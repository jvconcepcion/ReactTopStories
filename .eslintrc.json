{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "nextjs",
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
            "printWidth": 80,
            "trailingComma": "es5",
            "semi": true,
            "jsxSingleQuote": true,
            "singleQuote": true,
            "useTabs": true
            }
        ]
    }
}